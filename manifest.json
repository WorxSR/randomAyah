{
  "manifest_version": 3,
  "name": "Random Quran Ayah",
  "version": "1.0",
  "description": "Displays a random Quranic ayah with audio playback (Husary).",
  "permissions": [
    "alarms",
    "storage",
    "notifications"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": "q128.png"
  },
  "background": {
    "service_worker": "background.js"
  },
  "options_page": "options.html", 
  "icons": {
    "128": "q128.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["window.html", "window.css", "window.js",  "options.js"],
      "matches": ["<all_urls>"]
    }
  ]
}
